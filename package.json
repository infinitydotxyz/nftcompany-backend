{
  "name": "nftcompany-backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "watch": "tsc --watch",
    "dev": "concurrently 'npm run watch' 'TS_NODE_BASEURL=./dist/src nodemon -r dotenv/config -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/index.js'",
    "build": "npm install && rimraf dist && tsc",
    "start": "npm run build && TS_NODE_BASEURL=./dist/src node -r dotenv/config -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/index.js",
    "script": "npm run build && TS_NODE_BASEURL=./dist/src node -r dotenv/config -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/script.js",
    "dev:js": "npm run build:js && nodemon server.js",
    "start:js": "node server.js",
    "lint": "eslint .",
    "lintfix": "eslint --fix .",
    "copy-files": "copyfiles utils.js constants.js dist",
    "build:js": "npm install && rimraf dist && tsc && npm run copy-files",
    "docs": "jsdoc ./src/types/Order.ts -r -c ./ts-to-jsdoc/jsdoc.json -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mavriklabs/nftcompany-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mavriklabs/nftcompany-backend/issues"
  },
  "homepage": "https://github.com/mavriklabs/nftcompany-backend#readme",
  "dependencies": {
    "axios": "0.21.4",
    "bignumber.js": "9.0.1",
    "canvas": "^2.8.0",
    "cors": "2.8.5",
    "csv-parse": "^4.16.3",
    "dotenv": "10.0.0",
    "ethers": "5.4.7",
    "express": "4.17.1",
    "express-jsdoc-swagger": "^1.6.7",
    "express-rate-limit": "5.3.0",
    "firebase-admin": "9.11.1",
    "helmet": "4.6.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mime": "^1.6.0",
    "nodemailer": "6.6.3",
    "pg": "8.7.1",
    "qs": "^6.7.0",
    "reflect-metadata": "^0.1.13",
    "stream-buffers": "^3.0.2",
    "tsyringe": "^4.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/lodash": "^4.14.177",
    "@types/md5": "^2.3.1",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.4",
    "@types/stream-buffers": "^3.0.4",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^5.7.0",
    "concurrently": "^6.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "nodemon": "2.0.12",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true
  }
}
