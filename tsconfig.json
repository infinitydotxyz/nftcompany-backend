{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["../node_modules/*"],
      "@utils/*": ["./utils/*"],
      "@routes/*": ["./routes/*"],
      "@constants": ["./constants.js"],
      "@services/*": ["./services/*"],
      "@base/*": ["./*"]
    }
  },
  "include": ["src/", "src/**/*.json"]
}
